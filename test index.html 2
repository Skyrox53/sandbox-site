  <script>
    function runCode() {
      const code = document.getElementById("code").value;
      const output = document.getElementById("output");
      const secretZone = document.getElementById("secret-message");

      // Injecte le code dans l'iframe
      output.srcdoc = code;

      // Affiche un message secret dans l'interface principale
      if (code.toLowerCase().includes("secret")) {
        secretZone.style.display = "block";
      } else {
        secretZone.style.display = "none";
      }

      // Ajoute un message secret directement dans l'iframe si le mot est d√©tect√©
      if (code.toLowerCase().includes("secret")) {
        const secretScript = `
          <script>
            document.body.insertAdjacentHTML('beforeend', '<div style="position:fixed;bottom:10px;right:10px;padding:10px;background:#000;color:#0f0;border-radius:5px;font-family:monospace;">üéâ Secret d√©tect√© !</div>');
          <\/script>
        `;
        output.srcdoc = code + secretScript;
      }
    }
  </script>
