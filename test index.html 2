  <div class="top-bar">
    <button onclick="toggleDarkMode()">üåì Mode Sombre</button>
    <button onclick="insertExample()">üé≤ Exemple al√©atoire</button>
    <button onclick="toggleShop()">üõí Shop</button>
  </div>
  <div id="points-display">Points : <span id="points">0</span></div>

  <h1>üéÆ Bac √† sable Web ‚Äî B√™ta</h1>
  <div id="sandbox">
    <label for="code">√âcris ton code HTML/CSS/JS ici :</label>
    <textarea id="code"><h2>Hello World !</h2><p>Tu peux √©crire ici du code HTML, CSS ou JavaScript.</p></textarea>
    <button onclick="runCode()">Ex√©cuter le code</button>
    <iframe id="output"></iframe>
    <p id="secret-message">üïµÔ∏è‚Äç‚ôÇÔ∏è Bien jou√©, tu as trouv√© le secret !</p>
  </div>

  <div class="modal" id="shop-modal">
    <h2>üõçÔ∏è Boutique</h2>
    <p>Utilise tes points pour personnaliser l'apparence :</p>
    <button onclick="changeBackground('#ffe0e0', 10)">üé® Fond rose (10 pts)</button><br>
    <button onclick="changeBoxColor('#e0f7fa', 10)">üì¶ Bo√Æte bleue claire (10 pts)</button><br>
    <button onclick="toggleShop()">Fermer</button>
  </div>

  <script>
    let points = parseInt(localStorage.getItem('points') || '0');
    document.getElementById('points').textContent = points;

    function updatePoints(val) {
      points += val;
      localStorage.setItem('points', points);
      document.getElementById('points').textContent = points;
    }

    function toggleDarkMode() {
      document.body.classList.toggle('dark-mode');
    }

    function insertExample() {
      const examples = [
        '<h1>Hello üëã</h1><p>Bienvenue sur le bac √† sable.</p>',
        '<div style="color:red; font-weight:bold;">Texte rouge et gras</div>',
        '<script>alert("Tu peux aussi √©crire du JS ici !")<\/script>',
        '<style>body { background: linear-gradient(135deg, #00f, #0ff); }</style><h2>Fond d√©grad√© !</h2>'
      ];
      document.getElementById("code").value = examples[Math.floor(Math.random() * examples.length)];
    }

    function toggleShop() {
      const modal = document.getElementById('shop-modal');
      modal.style.display = (modal.style.display === 'none' || modal.style.display === '') ? 'block' : 'none';
    }

    function changeBackground(color, cost) {
      if (points >= cost) {
        document.body.style.backgroundColor = color;
        updatePoints(-cost);
      } else {
        alert("Pas assez de points !");
      }
    }

    function changeBoxColor(color, cost) {
      if (points >= cost) {
        document.getElementById("sandbox").style.backgroundColor = color;
        updatePoints(-cost);
      } else {
        alert("Pas assez de points !");
      }
    }

    function runCode() {
      updatePoints(1);
      const code = document.getElementById("code").value;
      const output = document.getElementById("output");
      const secretZone = document.getElementById("secret-message");

      if (code.toLowerCase().includes("secret")) {
        secretZone.style.display = "block";
      } else {
        secretZone.style.display = "none";
      }

      if (code.toLowerCase().includes("secret")) {
        const secretScript = `
          <script>
            const toast = document.createElement('div');
            toast.textContent = 'üéâ Secret d√©tect√© !';
            toast.className = 'secret-toast';
            Object.assign(toast.style, {
              position: 'fixed',
              bottom: '10px',
              right: '10px',
              padding: '10px',
              background: '#000',
              color: '#0f0',
              borderRadius: '5px',
              fontFamily: 'monospace',
              zIndex: 9999,
              transition: 'opacity 1s',
              opacity: '1'
            });
            document.body.appendChild(toast);
            setTimeout(() => {
              toast.style.opacity = '0';
              setTimeout(() => toast.remove(), 1000);
            }, 4000);
          <\/script>
        `;
        output.srcdoc = code + secretScript;
      } else {
        output.srcdoc = code;
      }
    }
  </script>
